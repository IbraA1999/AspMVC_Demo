<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/GererContact.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <ul class="ul-topbar">
                <li><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                <li><a asp-controller="Auth" asp-action="Login">Login</a></li>
                <li><a asp-controller="Auth" asp-action="Register">S'enregistrer</a></li>
                <li class="dropdown">
                    <a href="#">Gestion des contacts</a>
                    <div class="dropdown-content">
                        <a asp-controller="Contact" asp-action="AfficherContact">Afficher contact</a>
                        <a asp-controller="Contact" asp-action="EnregistrerContact">Enregistrer contact</a>
                    </div>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PresentationSiteWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


