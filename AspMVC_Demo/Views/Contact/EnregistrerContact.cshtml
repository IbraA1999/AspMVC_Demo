@using AspMVC_Demo.Web.Models
@model CreateContactForm

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="~/css/Header.css">
    <link rel="stylesheet" type="text/css" href="~/css/GererContact.css">
    <link rel="stylesheet" type="text/css" href="~/css/Form.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <ul class="ul-topbar">
                <li><a href="~/home/Index">Accueil</a></li>
                <li><a href="~/home/Contact">Contact</a></li>
                <li><a href="~/auth/login">Login</a></li>
                <li><a href="~/auth/register">S'enregistrer</a></li>
                <li class="dropdown">
                    <a href="~/Contact/GererContact">Gestion des contacts</a>
                    <div class="dropdown-content">
                        <a href="~/Contact/AfficherContact">Afficher contact</a>
                        <a href="~/Contact/EnregistrerContact">Enregistrer contact</a>
                    </div>
                </li>
            </ul>
        </nav>
    </header>
    <nav class="sous-navbar">
        <ul class="ul-sous-topbar">
            <li><a href="~/Contact/AfficherContact">Afficher contact</a></li>
            <li><a href="~/Contact/EnregistrerContact">Enregistrer un contact</a></li>
        </ul>
    </nav>
   @if (!ViewContext.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, $"Le formulaire contient {ViewContext.ModelState.ErrorCount} erreur(s)")
    }
    <div class="wrapper">
        <form method="post">
            <div class="input-box">
                <label>Prenom</label>
                @Html.EditorFor(model => model.Prenom, new { @class = "form-control" }) <br />
                @Html.ValidationMessageFor(expression: model => model.Prenom, message: null, htmlAttributes: new { @class = "text-danger", placeholder = "Prenom" })
            </div>
            <div class="input-box">
                <label>Nom</label>
                @Html.EditorFor(model => model.Nom, new { @class = "form-control" }) <br /> <br />
                @Html.ValidationMessageFor(expression: model => model.Nom, message: null, htmlAttributes: new { @class = "text-danger", placeholder = "Prenom" })
            </div>
            <div class="input-box">
                <label>Email</label>
                @Html.EditorFor(model => model.Email, new { @class = "form-control" }) <br /> <br />
                @Html.ValidationMessageFor(expression: model => model.Email, message: null, htmlAttributes: new { @class = "text-danger", placeholder = "Prenom" })
            </div>
            <button class="btn" type="submit" value="send">Enregister le contact</button>
        </form>
    </div>
</body>
</html>

